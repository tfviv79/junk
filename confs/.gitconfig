[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto

[alias]
    st = status
    stt = status -uno
    ci = commit -v 
    co = checkout
    br = branch
    di = diff --color
    difff = diff --word-diff=color
    hist = log --all --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    hi= log --all --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    m=merge --no-ff
[core]
    editor = nvim
